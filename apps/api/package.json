{
  "name": "@truxe/api",
  "version": "1.2.0",
  "description": "Truxe Authentication API - Secure, scalable authentication service",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch --env-file=.env src/server.js",
    "start": "node --env-file=.env src/server.js",
    "worker": "node --env-file=.env src/queues/workers/worker.js",
    "worker:dev": "node --watch --env-file=.env src/queues/workers/worker.js",
    "test": "npm run test:jest && npm run test:oauth",
    "test:jest": "jest --passWithNoTests --testPathIgnorePatterns=oauth",
    "test:oauth": "node --test tests/oauth-infrastructure.test.js tests/oauth-google-provider.test.js",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:oauth:admin": "jest tests/unit/oauth-provider/oauth-admin-endpoints.test.js",
    "test:security": "jest tests/security.test.js",
    "test:production": "jest tests/production.test.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "build": "echo 'No build step required for Node.js'",
    "generate-keys": "node scripts/generate-keys.js",
    "validate-config": "node scripts/validate-config.js",
    "migrate-config": "node scripts/migrate-config.js",
    "config:validate": "node scripts/validate-config.js validate",
    "config:recommend": "node scripts/validate-config.js recommend",
    "config:template": "node scripts/validate-config.js template",
    "config:migrate": "node scripts/migrate-config.js migrate",
    "config:migrate-dry": "node scripts/migrate-config.js migrate --dry-run",
    "health:check": "curl -f http://localhost:${TRUXE_API_PORT:-87001}/health || exit 1",
    "health:performance": "curl -f http://localhost:${TRUXE_API_PORT:-87001}/health/performance || exit 1",
    "health:monitoring": "curl -f http://localhost:${TRUXE_API_PORT:-87001}/health/monitoring || exit 1",
    "health:production": "curl -f http://localhost:${TRUXE_API_PORT:-87001}/health/production || exit 1",
    "health:comprehensive": "curl -f http://localhost:${TRUXE_API_PORT:-87001}/health/comprehensive || exit 1",
    "production:start": "NODE_ENV=production node src/server.js",
    "production:test": "NODE_ENV=production npm run test:security && npm run test:production",
    "test:load:smoke": "k6 run ../scripts/load-testing.js --env TEST_TYPE=smoke",
    "test:load:normal": "k6 run ../scripts/load-testing.js --env TEST_TYPE=load",
    "test:load:stress": "k6 run ../scripts/load-testing.js --env TEST_TYPE=stress",
    "test:load:spike": "k6 run ../scripts/load-testing.js --env TEST_TYPE=spike",
    "test:load:volume": "k6 run ../scripts/load-testing.js --env TEST_TYPE=volume",
    "test:load:endurance": "k6 run ../scripts/load-testing.js --env TEST_TYPE=endurance",
    "test:load:all": "k6 run ../scripts/load-testing.js",
    "backup:create": "node ../scripts/disaster-recovery.js create-backup --type=full",
    "backup:test": "node ../scripts/disaster-recovery.js test-disaster-recovery",
    "backup:status": "node ../scripts/disaster-recovery.js status",
    "production:deploy": "node ../scripts/production-deployment.js",
    "production:validate": "node ../scripts/production-validation.js",
    "production:validate:full": "node ../scripts/production-validation.js --enableLoadTests=true --enableSecurityTests=true --enablePerformanceTests=true",
    "production:validate:security": "node ../scripts/production-validation.js --enableSecurityTests=true",
    "production:validate:performance": "node ../scripts/production-validation.js --enablePerformanceTests=true",
    "production:validate:load": "node ../scripts/production-validation.js --enableLoadTests=true",
    "production:validate:success-criteria": "node ../scripts/validate-success-criteria.js",
    "production:validate:success-criteria:full": "node ../scripts/validate-success-criteria.js --enableLoadTesting=true --enableSecurityValidation=true --enablePerformanceValidation=true --enableDisasterRecoveryValidation=true"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.454.0",
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@getbrevo/brevo": "^3.0.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "argon2": "^0.44.0",
    "aws-sdk": "^2.1691.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.63.0",
    "crypto": "^1.0.1",
    "fastify": "^4.24.0",
    "ioredis": "^5.3.2",
    "jose": "^5.1.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.5",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "prom-client": "^15.1.0",
    "qrcode": "^1.5.3",
    "resend": "^2.1.0",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-elasticsearch": "^0.17.4",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.6",
    "babel-jest": "^30.1.2",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "testcontainers": "^10.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "authentication",
    "authorization",
    "jwt",
    "magic-link",
    "passwordless",
    "multi-tenant",
    "rbac",
    "fastify",
    "api"
  ],
  "author": "Wundam LLC",
  "license": "SEE LICENSE IN ../LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/truxeio/truxe.git",
    "directory": "api"
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  }
}
