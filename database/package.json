{
  "name": "@truxe/database",
  "version": "1.0.0",
  "description": "Truxe database layer with PostgreSQL, migrations, and security",
  "main": "connection.js",
  "scripts": {
    "migrate": "node migrate.js",
    "migrate:up": "node migrate.js up",
    "migrate:down": "node migrate.js down",
    "migrate:status": "node migrate.js status",
    "migrate:validate": "node migrate.js validate",
    "migrate:create": "node migrate.js create",
    "test": "jest",
    "test:security": "jest tests/security-validation.test.js",
    "test:security:advanced": "jest tests/advanced-security-testing.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js tests/*.js",
    "lint:fix": "eslint *.js tests/*.js --fix",
    "setup": "npm run migrate:up && npm run test:security",
    "setup:advanced": "npm run migrate:up && npm run test:security:advanced",
    "reset": "npm run migrate:down 000 && npm run migrate:up",
    "benchmark": "node scripts/benchmark.js",
    "benchmark:advanced": "node scripts/advanced-benchmark.js",
    "optimize": "npm run migrate:up && npm run benchmark:advanced",
    "health": "psql $DATABASE_URL -c \"SELECT * FROM check_database_health();\"",
    "metrics": "psql $DATABASE_URL -c \"SELECT * FROM get_tenant_performance_summary();\"",
    "slow-queries": "psql $DATABASE_URL -c \"SELECT * FROM analyze_slow_queries(24, 200);\"",
    "refresh-cache": "psql $DATABASE_URL -c \"SELECT refresh_user_org_access_cache_safe();\"",
    "cleanup": "psql $DATABASE_URL -c \"SELECT * FROM cleanup_performance_metrics(30);\""
  },
  "dependencies": {
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/pg": "^8.10.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "database",
    "postgresql",
    "migrations",
    "security",
    "rls",
    "multi-tenant",
    "connection-pool"
  ],
  "author": "Wundam LLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/truxeio/truxe.git",
    "directory": "database"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!migrate.js",
      "!scripts/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testTimeout": 30000
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "comma-dangle": ["error", "always-multiline"]
    }
  }
}
